{
  "expo": {
    "name": "Fit&Power",
    "slug": "fitandpower",
    "owner": "flupil",
    "scheme": "fitgym",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF6B35"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fitandpower.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSMotionUsageDescription": "This app uses motion data to count your steps and track your fitness activity.",
        "NSCameraUsageDescription": "This app needs camera access to scan food barcodes for nutrition tracking.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF6B35"
      },
      "package": "com.fitandpower.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.ACTIVITY_RECOGNITION",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Fit&Power",
      "shortName": "FitPower",
      "lang": "en",
      "scope": "/transfer/",
      "startUrl": "/transfer/",
      "backgroundColor": "#202124",
      "themeColor": "#FF6B35",
      "display": "standalone",
      "orientation": "portrait",
      "description": "Your complete fitness companion for workouts, nutrition tracking, and progress monitoring.",
      "preferRelatedApplications": false,
      "crossOrigin": "anonymous",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "3b5f6e03-1b00-49a8-a5ae-590defed5901"
      }
    },
    "plugins": [
      "expo-sqlite",
      "expo-web-browser",
      "expo-font",
      "expo-calendar",
      "expo-local-authentication",
      "expo-notifications",
      "expo-media-library",
      "expo-image-picker",
      [
        "expo-sensors",
        {
          "motionPermission": "Allow $(PRODUCT_NAME) to access your device's motion and fitness data to count steps and track activity."
        }
      ]
    ]
  }
}
